/* Liste des tests */
QListWidget {
    background-color: #4389ca;
    border: 1px solid #4389ca;
}

QListWidget::item {
    background-color: #4389ca;
    color: #4389ca;
}

QListWidget::item:selected {
    background-color: #4389ca;
}